@page
@model IEnumerable<Job>
@using SearchJob.Models
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Поиск вакансий</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Поиск вакансий</h1>

        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Введите название вакансии" asp-for="SearchQuery" />
            <button class="btn btn-primary" type="submit" formmethod="get">Поиск</button>
        </div>

        <div class="mb-3">
            <a href="/Favorites" class="btn btn-secondary">Избранное</a>
            <a href="/Profile" class="btn btn-secondary">Профиль</a>
        </div>

        <h2>Найдено 10000 вакансий</h2>
       
        <div class="row">
            @foreach(var job in Model)
            {
                <div class="col-md-4 mb-4">
                   
                    <div class="card-body">
                        <h5 class="card-title">@job.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@job.CompanyName</h6>
                        <p class="card-text">@job.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Зарплата: от @job.SalaryFrom до @job.SalaryTo</small>
                        </p>
                        <a href="AddToFavorites?jobId=@job.Id" class="btn btn-secondary">Добавить в избранное</a> <!-- Ссылка на добавление в избранное -->
                    </div>
                </div>
            }
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>